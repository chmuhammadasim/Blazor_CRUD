@page "/signup"


<EditForm Model="@entSignup" OnSubmit="SaveSignUp">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationServer01">First name</label>
      <InputText @bind-Value="entSignup.FirstName" type="text" class="form-control " id="validationServer01" placeholder="First name"  required />
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationServer02">Last name</label>
      <InputText @bind-Value="entSignup.LastName" type="text" class="form-control " id="validationServer02" placeholder="Last name" required />
    </div>
        <div class="col-md-4 mb-3">
      <label for="validationServer02">Father's name</label>
      <InputText @bind-Value="entSignup.FatherName" type="text" class="form-control" id="validationServer04" placeholder="Father'sname" required />
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationServer01">Password</label>
      <InputText @bind-Value="entSignup.Password" type="text" class="form-control" id="validationServer05" placeholder="Password"  required />
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationServer02">Email</label>
      <InputText @bind-Value="entSignup.Email" type="text" class="form-control " id="validationServer06" placeholder="Email" required />
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationServer02">Phone Number</label>
      <InputText @bind-Value="entSignup.PhoneNumber" type="text" class="form-control " id="validationServer07" placeholder="Email" required />
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationServer03">Address</label>
      <InputText @bind-Value="entSignup.Address" type="text" class="form-control " id="validationServer03" placeholder="Address" required />
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Submit form</button>
</EditForm>

@code {
  public EntSignup entSignup { get; set; } = new EntSignup();
    private string? Email { get; set; }
    private string? Password { get; set; }
    private string? FirstName { get; set; }
    private string? LastName { get; set; }
    private string? Address { get; set; }
    private string? FatherName { get; set; }
    private string? PhoneNumber { get; set; }
    

  private void SaveSignUp()
  {
    DALSignUp.Add(entSignup);
    this.Email = "";
    this.Password = "";
    this.FirstName = "";
    this.LastName = "";
    this.Address = "";
    this.FatherName = "";
    this.PhoneNumber = "";
    NavigationManager.NavigateTo("/signup",forceLoad:true);
  }

}
